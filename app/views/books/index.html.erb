<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>  <!--''を""に修正、_path(book.id)を追加-->
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>  <!--''を""に修正、,を(book.id)に修正-->
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>  <!--''を""に修正、_path(book.id)を追加-->
      </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>
<%= render 'form' , book: @book %> <!-- , book: @book を追加-->



